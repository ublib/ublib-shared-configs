{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "temp",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "rootDir": ".",
    "paths": {
      // TODO: package-name
      "@package-name/*": [
        "./packages/*/src"
      ],
      "package-name": [
        "./packages/package-name/src"
      ],
    }
  },
  "include": [
    // "src", // TODO:
    // "packages/**/src/*.ts", // TODO:
    "examples",
  ]
}
